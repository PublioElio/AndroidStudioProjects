<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/imgViewContactList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:src="@drawable/contact_def_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txtViewNameContactList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE DE CONTACTO"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/txtViewPhoneContactList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="0dp"
        android:text="TELEFONO DE CONTACTO"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnEditContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_vertical_ellipsis"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/btn_edit_style"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- cabecera roja -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi primera aplicaciÃ³n en Android"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:typeface="sans"
            android:textSize="40sp"
            android:textColor="#FF0000"/>

    </LinearLayout>

    <!-- cabecera azul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduce los siguientes datos:"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:textColor="#0000FF"/>

    </LinearLayout>

    <!-- introducir nombre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#96F3FF">

        <TextView
            android:id="@+id/nombre_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginRight="40dp"
            android:textColor="#7F7F7F"/>

        <EditText
            android:id="@+id/editTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Introduce el nombre"
            android:inputType="text"
            android:maxLength="40"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"/>

    </LinearLayout>

    <!-- introducir clave -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#96F3FF">

        <TextView
            android:id="@+id/clave_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clave:"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginRight="56dp"
            android:textColor="#7F7F7F"/>

        <EditText
            android:id="@+id/editTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Introduce la clave"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0000FF"
            android:text="Resetear"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>